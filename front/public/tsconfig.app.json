{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "markdown-it", 
      "markdown-it-container", 
      "axios", 
      "miragejs", 
      "node", 
      "element-plus/global",
      "unplugin-icons/types/vue",
      "dayjs"
    ]
  }
}
